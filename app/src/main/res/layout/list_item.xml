<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/conditionImageView"
        android:layout_width="@dimen/image_side_length"
        android:layout_height="match_parent"
        android:contentDescription="@string/weather_condition_image"
        android:scaleType="fitCenter" />

    <GridLayout
        android:id="@+id/itemGridLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <!-- Step 4.1: Large Text (Day) -->
        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <!-- Step 4.2: Low Temp -->
        <TextView
            android:id="@+id/lowTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <!-- Step 4.2: High Temp -->
        <TextView
            android:id="@+id/hiTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1" />

        <!-- Step 4.2: Humidity -->
        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1" />

    </GridLayout>

</LinearLayout>
